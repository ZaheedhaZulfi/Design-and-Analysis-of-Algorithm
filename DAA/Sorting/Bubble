%Bubble sort
arr = [64, 34, 25, 12, 22, 11,90]; 

n=length(arr);
disp(arr);

for  i=1:n-1
    for j=1:n-i
        if arr(j) >arr(j+1)
            %swap element
               temp=arr(j);
               arr(j)=arr(j+1);
               arr(j+1)=temp;
       end 
   end
end
%display array state at each step
     fprintf("Sorted array\n");
     
     disp(arr);
